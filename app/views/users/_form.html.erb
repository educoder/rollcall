<%= form_for(@user) do |f| %>
  
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <%= f.error_messages(:message => "",
        :header_message => "The #{@user.class.name} couldn't be saved to the database because:") %>
    </div>
  <% end %>
  
  <%= render(:partial => 'accounts/form', :locals => {:f => f}) %>
	
  <div class="field">
    <%= f.label :display_name %><br />
    <%= f.text_field :display_name %>
  </div>
	<div class="field">
    <%= f.label :kind %><br />
    <%= f.select :kind, User::KINDS %>
  </div>
  
  <%= render(:partial => 'metadata/form', :locals => {:f => f})%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
