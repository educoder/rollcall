<%= f.fields_for :account do |account_fields| %>
  <div class="field">
    <%= account_fields.label :login %>
		<% if account_fields.object.new_record? %>
	    <br /><%= account_fields.text_field :login %>
		<% else %>
			<div class="read-only"><%= account_fields.object.login %></div>
		<% end %>
  </div>
	<div class="field">
    <%= account_fields.label :password %><br />
    <%= account_fields.text_field :password %>
  </div>
  
  <% unless account_fields.object.new_record? %>
  	<div class="field">
  	  <%= account_fields.label :encrypted_password %>
  	  <div class="read-only"><%= account_fields.object.encrypted_password %></div>
  	</div>
	<% end %>
<% end %>
